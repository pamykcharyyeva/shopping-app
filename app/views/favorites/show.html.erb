    <body>
        </br>
        <br><%= button_to 'Home page', user_path(current_user), method: :get %></br>
        </br>
        <div>
        <h3><p> ********  My favorite websites:  ********</p></h3>
        </br>
        <ul>
            <il><% @user.favorites.each do |favorite| %> </il>
                   <h5> ~ <%= favorite.category.name %> ~ </h5>
                   <li> <%= link_to favorite.name, "http://#{favorite.link}" %> </li>
                   <% if current_user == @user %>
                   <%= button_to "Delete", favorite, method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
