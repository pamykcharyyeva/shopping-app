
<div class="ui clearing segment">
  <h2 class="ui left floated header">
    <h2></h2>
    <h2 class="ui teal header"> <%= current_user.username %>'s Favorite Websites</h2>
  </h2>
</div>

 <%= button_to "Home Page", user_path, method: :get, class: 'ui violet button' %>


<ul>

    <p><% current_user.favorites.each do |favorite| %> </p>

           <li><h3> <%= link_to favorite.name, "http://#{favorite.link}" %> </h3> </li>
           <h5> ~ <%= favorite.category.name %> ~ </h5>
           <div class="ui buttons" tabindex="0">
           <%= button_to "Delete", favorite, method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: 'ui grey button' %>
           <%= button_to "Edit", edit_favorite_path, method: :patch, class: 'ui green button'%>
           </div>
           <!-- <p> Do you want to edit this favorite link?  -->

       <%end%>
</ul>
